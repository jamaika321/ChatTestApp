<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_background_color"
    tools:context=".ui.profileFragment.ProfileFragment">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_card_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_login" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_card_view"
            app:layout_constraintEnd_toEndOf="@+id/avatar_card_view">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:padding="10dp"
                android:src="@drawable/ic_photo_camera_48" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+79219999999"
        android:textColor="@color/clear_black"
        style="@style/ProfileText"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nickname"
        style="@style/ProfileText"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/profile_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moscow"
        style="@style/ProfileText"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/profile_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01.01.2000"
        style="@style/ProfileText"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/profile_aboutYourself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:text="About Yourself"
        style="@style/ProfileText"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp"
        />



</LinearLayout>