<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ChatItemTitle" >
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>
    <style name="ChatItemLastMessage" parent="ChatItemTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_blur</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ProfileText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>